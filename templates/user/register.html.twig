{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <form action="" method="post">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" class="form-control" required="required" autocomplete="email" />

                <label for="password">Password</label>
                <input type="password" id="password" class="form-control" name="password" required="required" autocomplete="current-password" />
                <label for="rPassword">Repeat Password</label>
                <input type="password" id="rPassword" class="form-control" name="rPassword" required="required" autocomplete="repeat-password" />
                <br>
                <input type="submit" class="pull-right btn btn-success" id="_submit" name="_submit" value="Register" />
                <br>
            </form>
        </div>
    </div>
{% endblock %}